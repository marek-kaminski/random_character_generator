BoxLayoutExample:



<BoxLayoutExample>:

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.5, 1
        Label:
            text: "Wybierz system:"
            text_size: self.width, None
            padding_x: 10
            size_hint: 1, .5


        Button:
            text: "S.T.A.L.K.E.R"
            text_size: self.width, None
            on_press: root.on_button_click_STALKER()
            padding_x: 10
            size_hint: 1, .5
            #spacing: "20dp", "20dp"

        Button:
            text: "Star Wars"
            text_size: self.width, None
            on_press: root.on_button_click_Star_Wars()
            padding_x: 10
            size_hint: 1, .5
        Button:
            text: "Warhammer fantasy"
            text_size: self.width, None
            on_press: root.on_button_click_Warhammer_fantasy()
            padding_x: 10
            size_hint: 1, .5

        Button:
            text: "DnD"
            text_size: self.width, None
            on_press: root.on_button_click_DnD()
            padding_x: 10
            size_hint: 1, .5

    BoxLayout:
        orientation: "vertical"
        GridLayout:
            size_hint: 1, 0.67
            cols: 2
            rows: 2
            Label:
                text: "Liczba postaci: "
                text_size: self.width, None
                padding_x: 10
                size_hint: 1, .5
            Label:
                text: root.character_amount_display
                text_size: self.width, None
                padding_x: 10
            Button:
                text: "+"
                text_size: self.width, None
                on_press: root.on_button_add()
                padding_x: 40
                size_hint: 1, .3

            Button:
                text: "-"
                text_size: self.width, None
                on_press: root.on_button_remove()
                padding_x: 10
        ScrollView:
            Label:
                size_hint: None, None
                text: root.my_text
                size: self.texture_size
                #text_size: self.width, None
                #text_size: None, self.width
                #align:center
                #size_hint: .3, .3



