BoxLayoutExample:



<BoxLayoutExample>:

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.5, 1
        Label:
            text: "Wybierz system:"
            text_size: self.width, None
            padding_x: 10
            size_hint: 1, .5


        Button:
            text: "S.T.A.L.K.E.R"
            text_size: self.width, None
            on_press: root.on_button_click_STALKER()
            padding_x: 10
            size_hint: 1, .5


        Button:
            text: "Star Wars"
            text_size: self.width, None
            on_press: root.on_button_click_Star_Wars()
            padding_x: 10
            size_hint: 1, .5
        Button:
            text: "Warhammer fantasy"
            text_size: self.width, None
            on_press: root.on_button_click_Warhammer_fantasy()
            padding_x: 10
            size_hint: 1, .5

        Button:
            text: "DnD"
            text_size: self.width, None
            on_press: root.on_button_click_DnD()
            padding_x: 10
            size_hint: 1, .5

	Label:
		text: root.my_text
		text_size: self.width, None
		#size_hint: .3, .3



